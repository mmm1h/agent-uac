{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agent UAC",
  "version": "0.1.0",
  "identifier": "com.agent.uac",
  "build": {
    "beforeDevCommand": "npm run dev:desktop",
    "beforeBuildCommand": "npm run build:web",
    "devUrl": "http://127.0.0.1:5173",
    "frontendDist": "../web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Agent UAC",
        "width": 1360,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "externalBin": [
      "binaries/server"
    ]
  }
}