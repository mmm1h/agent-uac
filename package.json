{
  "name": "agent-uac",
  "version": "0.1.0",
  "description": "Unified MCP and skills sync tool for Codex/Gemini/Claude.",
  "private": true,
  "type": "module",
  "bin": {
    "uac": "dist/index.js",
    "uac-mcp": "dist/mcp-server.js"
  },
  "scripts": {
    "build:core": "tsc -p tsconfig.json",
    "build:web": "vite build --config web/vite.config.ts",
    "build": "npm run build:core && npm run build:web",
    "dev": "tsx src/index.ts",
    "dev:api": "tsx src/api/server.ts",
    "dev:web": "vite --config web/vite.config.ts",
    "dev:desktop": "concurrently -k -n API,WEB -c cyan,magenta \"npm:dev:api\" \"npm:dev:web\"",
    "mcp": "tsx src/mcp-server.ts",
    "start:api": "node dist/api/server.js",
    "typecheck:core": "tsc --noEmit",
    "typecheck:web": "tsc -p web/tsconfig.json --noEmit",
    "typecheck": "npm run typecheck:core && npm run typecheck:web",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "ajv": "^8.17.1",
    "cors": "^2.8.5",
    "commander": "^13.1.0",
    "express": "^4.21.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.2.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}