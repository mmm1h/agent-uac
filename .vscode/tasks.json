{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev:web",
            "type": "npm",
            "script": "dev:web",
            "isBackground": true,
            "problemMatcher": {
                "owner": "vite",
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Local:.*http://127\\.0\\.0\\.1"
                }
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "close": false
            },
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "dev:api",
            "type": "npm",
            "script": "dev:api",
            "isBackground": true,
            "problemMatcher": {
                "owner": "uac-api",
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "\\[uac-api\\] listening"
                }
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "close": false
            },
            "runOptions": {
                "instanceLimit": 1
            }
        }
    ]
}